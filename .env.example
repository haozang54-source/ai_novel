# LLM配置示例文件
# 复制此文件为 .env 并填入实际配置

# OpenAI兼容接口配置
OPENAI_API_BASE=http://your_openai_api_base_url_here
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=your_openai_model_here

# Ollama配置（可选）
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:8b

# LLM提供商选择: openai 或 ollama
LLM_PROVIDER=ollama

# LLM参数
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=30000
